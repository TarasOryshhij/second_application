<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/RelativeItemStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_profile_icon"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                style="@style/AvatarStyle"/>

            <TextView
                android:id="@+id/tv_name_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_profile_icon"
                android:text="@string/prf_name"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_name_def"
                android:layout_alignBottom="@+id/tv_name_def"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/tv_id_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prf_id"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/tv_id_def"
                android:layout_alignBottom="@+id/tv_id_def" />

            <TextView
                android:id="@+id/tv_email_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prf_email"
                android:layout_below="@+id/tv_id_def"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/tv_email_def"
                android:layout_alignBottom="@+id/tv_email_def" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
